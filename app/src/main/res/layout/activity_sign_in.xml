<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="18dp"
    tools:context="com.surcas2010dev.eithar.SignIn">

    <include layout="@layout/app_bar"
        android:id="@+id/loginappbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/loginappbar"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/appicon_image_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="8dp"
            card_view:cardCornerRadius="0dp"
            >


            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/signup_app_icon"
                    android:src="@drawable/eitharicon"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:hint= "@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/signin_email_field"
                    android:layout_below="@+id/signup_app_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

                <EditText
                    android:gravity="right"
                    android:hint= "@string/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/signin_pass_field"
                    android:layout_below="@+id/signin_email_field"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

                <Button
                    style="@style/signinButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/singupnav"
                    android:id="@+id/signin_sininbutton"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/signin_pass_field"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:gravity="right"
                    style="@style/signinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/createnewaccount"
                    android:id="@+id/signin_newaccount"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    style="@style/signinText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/forgotpass"
                    android:layout_marginTop="12dp"
                    android:id="@+id/signin_forgotpass_"
                    android:layout_below="@+id/signin_pass_field"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </ScrollView>



    <!--<ImageView-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="250dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/eitharicon"-->
        <!--/>-->




</RelativeLayout>
